<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="interfaz.app3.pm1.juegodelgato.YovsMaquina">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/juega1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#EC088F"
            android:gravity="center"
            android:text="YO"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/juega2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#000"
            android:gravity="center"
            android:text="MAQUINA"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_weight="1">

        <GridLayout
            android:id="@+id/zona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:background="@android:color/black">

            <ImageView
                android:src="@drawable/casilla"
                android:id="@+id/im1"
                android:padding="10px"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="seleccionar"/>

            <ImageView
                android:src="@drawable/casilla"
                android:id="@+id/im2"
                android:padding="10px"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="seleccionar"/>

            <ImageView
                android:src="@drawable/casilla"
                android:id="@+id/im3"
                android:padding="10px"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="seleccionar"/>

            <ImageView
                android:src="@drawable/casilla"
                android:id="@+id/im4"
                android:padding="10px"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="seleccionar"/>

            <ImageView
                android:src="@drawable/casilla"
                android:id="@+id/im5"
                android:padding="10px"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="seleccionar"/>

            <ImageView
                android:src="@drawable/casilla"
                android:id="@+id/im6"
                android:padding="10px"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="seleccionar"/>

            <ImageView
                android:src="@drawable/casilla"
                android:id="@+id/im7"
                android:padding="10px"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="seleccionar"/>

            <ImageView
                android:src="@drawable/casilla"
                android:id="@+id/im8"
                android:padding="10px"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="seleccionar"/>

            <ImageView
                android:src="@drawable/casilla"
                android:id="@+id/im9"
                android:padding="10px"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:onClick="seleccionar"/>
        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/reiniciar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/boton"
            android:textColor="#fff"
            android:text="Reiniciar"
            android:onClick="reset"/>
        <Button
            android:id="@+id/acercade"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/boton"
            android:textColor="#fff"
            android:onClick="menu"
            android:text="Menu" />

        <Button
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/boton"
            android:textColor="#fff"
            android:onClick="salir"
            android:text="Salir" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
